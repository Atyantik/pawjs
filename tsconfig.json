{
  "compilerOptions": {
    "declaration": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "jsx": "react",
    "lib": ["dom", "esnext", "dom.iterable", "scripthost", "es2015.promise"],
    "module": "amd",
    "moduleResolution": "node",
    "skipLibCheck": true,
    "strict": true,
    "target": "esnext",
    "outDir": "dist",
    "resolveJsonModule": true
  },
  "include": [
    "src",
    ".eslintrc.js",
    "package.json",
    "./paw.js"
  ],
  "exclude": [
    "dist",
    "demo",
    "node_modules",
    "**/dist/**/*",
  ]
}
