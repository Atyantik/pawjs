{
  "defaultSeverity": "error",
  "extends": [
    "tslint-react",
    "tslint-config-airbnb"
  ],
  "rules": {
    "import-name": false,
    "no-implicit-dependencies": false,
    "no-submodule-imports": [true, "@pawjs", "lodash", "react-dom", "@babel"],
    "semicolon": [true, "always", "ignore-bound-class-methods"]
  },
  "indent": [true, "spaces", 2],
  "rulesDirectory": [],
  "linterOptions": {
    "exclude": [
      "**/node_modules/**",
      "node_modules/**",
      "demo/**",
      "src/__tests__/**",
      "src/babel/**",
      "src/webpack/**"
    ]
  }
}
